<Window x:Class="kurs.RefreshWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:kurs"
        mc:Ignorable="d"
        Title="Обновление заявки" Height="500" Width="350"  FontFamily="Cascadia Mono ExtraLight">

    <StackPanel Margin="0,119,0,0" >
    
        <TextBlock Text="Клиент:" />
        <ComboBox x:Name="ClientComboBox" DisplayMemberPath="client_name"/>

        <TextBlock Text="Тип ремонта:" />
        <ComboBox x:Name="TypeComboBox" DisplayMemberPath="name_type_of_repair"/>


        <TextBlock Text="Время ремонта:" />
        <ComboBox x:Name="TimeComboBox" DisplayMemberPath="name_time2"/>


        <TextBlock Text="Цена:" />
        <ComboBox x:Name="PriceComboBox" DisplayMemberPath="name_price"/>

        <TextBlock Text="Устройство:" />
        <ComboBox x:Name="DeviceComboBox" DisplayMemberPath="device_name"/>

        <TextBlock Text="Сотрудник:" />
        <ComboBox x:Name="WorkerComboBox" DisplayMemberPath="name_worker"/>
        
        <TextBlock Text="Гарантия:" />
        <ComboBox x:Name="WarrantyComboBox" DisplayMemberPath="name_warranty"/>

        <Button Content="Обновить" Click="UpdateButton_Click"/>
    </StackPanel>
</Window>


